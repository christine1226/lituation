<h1>Post New Event</h1>
<br>
<hr>
<% if @event.errors.any? %>
  <% @event.errors.full_messages.each do |msg| %>
    <p><%= msg %></p>
    <br>
  <% end %>
<% end %>

<br>
<%= form_for @event do |f| %>
  <br>
  <%= f.label :event_name %>
  <br>
  <%= f.text_field :event_name %>
  <br>
  <%= f.label :address %>
  <br>
  <%= f.text_field :address %>
  <br>
  <%= f.label :content %>
  <br>
  <%= f.text_area :content %>
  <br>
  <%= f.label :picture_url %>
  <br>
  <%= f.text_field :picture %>
  <br>
  <%= f.label :start_date_and_time %>
  <br>
  <%= f.datetime_select :start_datetime %>
  <br>
  <%= f.label :end_date_and_time %>
  <br>
  <%= f.datetime_select :end_datetime %>
  <br>
  <%= f.label :category %>
  <br>
  <%= f.collection_select :category_id, @categories, :id, :name %>
  <br>

  <%= f.submit "Create Event" %>
<% end %>
