<% @categories.each do |cat| %>
  <li> <%= cat.name %> </li>
<% end %>

 <%= form_for @category do |f| %>
 <%= f.collection_select :category_id, @categories, :id, :name%>
 <% end %>

<% @events.each do |event| %>
  <h5> Category: <%= event.category.name %> </h5> <br>
  <h3> Event: <%= event.event_name %> </h3> <br>
  <p> At: <%= event.address %> <br>
  From: <%= event.start_datetime.ctime %> <br>
  To: <%= event.end_datetime.ctime %> <br>
  Details: <%= event.content %> <br> <br> <br> <br> </p>
<% end %>
